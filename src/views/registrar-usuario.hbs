{{>header titulo = 'INDIEC - Registro'}}
<link rel="stylesheet" href="../css/registrar-usuario.css">

<body>

  <div class="page">
    <div class="container__registro">

      <form class="form" action="/registro-usuario" method="post"> <!-- Cambio en la acción del formulario -->
        <div class="slogan">
            <h1><img src="../img/musica.png" alt=""> iNDI EC </h1>
        </div>
        <span class="pr">¿Ya tienes cuenta?</span>
        <a class="re" href="/login">Iniciar Sesión</a> <!-- Cambio en el enlace -->

        <label for="nombre">Nombre de Usuario</label> <!-- Cambio en el atributo "for" -->
        <input id="nombre" type="text" name="nombre"> <!-- Cambio en el tipo de campo y el atributo "name" -->

        <label for="email">Dirección de Email</label>
        <input type="email" id="email" name="email"> <!-- Cambio en el orden de los atributos -->

        <label for="fecha_nacimiento">Fecha de Nacimiento</label> <!-- Cambio en el atributo "for" -->
        <input type="date" id="fecha_nacimiento" name="fecha_nacimiento"> <!-- Cambio en el tipo de campo y el atributo "name" -->

        <label for="password">Contraseña</label>
        <input type="password" id="password" name="password">

      <div class="cont">
        <p class="">Haciendo clic en ”Registrarse” aceptas las </p>
      <p><a class="contr" href="">Condicones de Generales de uso</a> y la<a class="re" href="">Politica de Privacidad</a></p>

      </div>
        {{#if alert}}
        <h3>{{mensaje}}</h3>
        {{/if}}
        <input class="submit" type="submit" id="submit" value="Registrarse"> <!-- Cambio en el texto del botón -->
      </form> <!-- Cerrar el formulario -->

    </div>
  </div>

</body>

<script src="/javascript/pantallacarga.js"></script>
